@model IEnumerable<WardrobeProject9.Models.Top>

@{
    ViewBag.Title = "Index";
}

<h2>Wardrobe</h2>
<br />
<p>
        @Html.ActionLink("Create New", "Create")
    </p>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="row vdivide">

            <div class="col-lg-3">
                <img src="@Html.DisplayFor(modelItem => item.TopPhoto)" style="height: 200px;" />
            </div>
            <div class="col-lg-6 wardrobeContent">
                <ul>
                    <li>
                        <h3>
                            @*<i class="fab fa-jenkins"></i>*@ @Html.DisplayFor(modelItem => item.TopName)
                        </h3>
                    </li>
                    <li>
                        <h3>
                            @Html.DisplayFor(modelItem => item.TopColor)
                        </h3>
                    </li>
                    <li>
                        <h3>
                            @Html.DisplayFor(modelItem => item.TopSeason)
                        </h3>
                    </li>
                    <li>
                        <h3>
                            @Html.DisplayFor(model => item.TopOccasion)
                        </h3>

                    </li>
                    <li>
                        <h3>
                            @Html.DisplayFor(model => item.TopType)
                        </h3>
                    </li>
                </ul>
           
            </div>
            <div class="col-lg-3">
                @Html.ActionLink("Edit", "Edit", new { id = item.TopID }) |
                @Html.ActionLink("Details", "Details", new { id = item.TopID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TopID })
            </div>
          
        </div><!-- row vdivide End -->
    }
    </div>

