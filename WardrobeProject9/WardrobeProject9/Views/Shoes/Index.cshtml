@model IEnumerable<WardrobeProject9.Models.Sho>

@{
    ViewBag.Title = "Index";
}

<div class="container wardrobeIndex">
    <div class="row">
        <div class="col-lg-12 wardrobeHeader">
            <h2>Shoe Wardrobe</h2>
            <br />
            <button class="btn btn-primary wardrobeBtn">@Html.ActionLink("Create New", "Create")</button>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="row vdivide">
            <div class="col-lg-4">
                <img src="@Html.DisplayFor(modelItem => item.ShoePhoto)" style="height: 200px;" />
            </div>
            <div class="col-lg-4 wardrobeContent">
                <ul>
                    <li>
                        <i class="far fa-hand-point-right"></i> @Html.DisplayFor(modelItem => item.ShoeName)
                    </li>
                    <li>
                        <i class="far fa-hand-point-right"></i> @Html.DisplayFor(modelItem => item.ShoeColor)
                    </li>
                    <li>
                        <i class="far fa-hand-point-right"></i> @Html.DisplayFor(modelItem => item.ShoeSeason)
                    </li>
                    <li>
                        <i class="far fa-hand-point-right"></i> @Html.DisplayFor(model => item.ShoeOcassion)
                    </li>
                    <li>
                        <i class="far fa-hand-point-right"></i> @Html.DisplayFor(model => item.ShoeType)
                    </li>
                </ul>
            </div>
            <div class="col-lg-4">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default">@Html.ActionLink("Edit", "Edit", new { id = item.ShoeID })</button>
                    <button type="button" class="btn btn-default">@Html.ActionLink("Details", "Details", new { id = item.ShoeID })</button>
                    <button type="button" class="btn btn-default">@Html.ActionLink("Delete", "Delete", new { id = item.ShoeID })</button>
                </div>
            </div>
        </div><!-- row vdivide End -->
    }
</div><!-- container End-->
